@page "/Apoio"

<PageTitle>Apoio</PageTitle>

<div class="main-content">
    <DxGridLayout CssClass="welcome-gridlayout" RowSpacing="3rem">
        <Rows>
            <DxGridLayoutRow Height="auto" Areas="header"></DxGridLayoutRow>
            <DxGridLayoutRow Height="auto" Areas="cards"></DxGridLayoutRow>
        </Rows>
        <Items>
            <DxGridLayoutItem Area="header" CssClass="title">
                <Template>
                    <div class="title-header-text">Apoio ao cliente!</div>
                </Template>
            </DxGridLayoutItem>
            <DxGridLayoutItem Area="cards" CssClass="welcome-cards">
                <Template>
                    <NavLink class="welcome-card" href="/Apoio">
                        <svg class="welcome-card-img" aria-label="Apoio">
                            <use href="images/cards.svg#tickets"></use>
                        </svg>
                        <div class="welcome-card-text">PROtextil</div>
                        <div class="welcome-card-back"></div>
                    </NavLink>

                    <NavLink class="welcome-card" href="/Comercial">
                        <svg class="welcome-card-img" aria-label="View Tickets">
                            <use href="images/cards.svg#tickets"></use>
                        </svg>
                        <div class="welcome-card-text">ATOMgest</div>
                        <div class="welcome-card-back"></div>
                    </NavLink>

                    <NavLink class="welcome-card" href="/Apoio">
                        <svg class="welcome-card-img" aria-label="ATOM">
                            <use href="images/cards.svg#tickets"></use>
                        </svg>
                        <div class="welcome-card-text">ATOMgest</div>
                        <div class="welcome-card-back"></div>
                    </NavLink>


                    <NavLink class="welcome-card" href="/Comercial">
                        <svg class="welcome-card-img" aria-label="View Tickets">
                            <use href="images/cards.svg#tickets"></use>
                        </svg>
                        <div class="welcome-card-text">Financeiro</div>
                        <div class="welcome-card-back"></div>
                    </NavLink>


                </Template>
            </DxGridLayoutItem>
        </Items>
    </DxGridLayout>
</div>

@code {
    [SupplyParameterFromQuery(Name = "toggleSidebar")]
    public bool ToggledSidebar { get; set; }
} 