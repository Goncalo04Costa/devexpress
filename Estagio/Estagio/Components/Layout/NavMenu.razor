@inject NavigationManager NavigationManager

<DxTreeView>
    <Nodes>
        <DxTreeViewNode Text="Home" />
        <DxTreeViewNode Text="Ticket" Expanded="true">
            <Nodes>
                <DxTreeViewNode Text="New Ticket" />
                <DxTreeViewNode Text="View Tickets" Clicked="OnViewTicketsClick" />
                <DxTreeViewNode Text="Ticket History" />
            </Nodes>
        </DxTreeViewNode>

        <DxTreeViewNode Text="Analytics">
            <Nodes>
                <DxTreeViewNode Text="Charting" />
                <DxTreeViewNode Text="Gauges" />
                <DxTreeViewNode Text="PivotGrid" />
            </Nodes>
        </DxTreeViewNode>
        <DxTreeViewNode Text="Settings" />
    </Nodes>
</DxTreeView>

@code {
    private void OnViewTicketsClick()
    {
        NavigationManager.NavigateTo("/ticket");
        NavigationManager.NavigateTo("/Comercial");
        NavigationManager.NavigateTo("/Apoio");
    }
}
